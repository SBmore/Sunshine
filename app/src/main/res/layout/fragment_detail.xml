<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.sunshine.DetailActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/whatDay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#fa191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/monthAndDay"
        android:layout_below="@+id/whatDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/lightGrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXo"
        android:id="@+id/maxTemp"
        android:layout_below="@+id/monthAndDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:textSize="96sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecastImg"
        android:layout_alignTop="@+id/maxTemp"
        android:layout_toRightOf="@+id/maxTemp"
        android:src="@drawable/art_clear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:id="@+id/minTemp"
        android:layout_below="@+id/maxTemp"
        android:layout_toLeftOf="@+id/forecastImg"
        android:layout_toStartOf="@+id/forecastImg"
        android:fontFamily="sans-serif-light"
        android:textSize="48sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/forecast"
        android:fontFamily="sans-serif-condensed"
        android:textSize="12sp"
        android:layout_below="@+id/forecastImg"
        android:layout_alignRight="@+id/forecastImg"
        android:layout_alignEnd="@+id/forecastImg"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:id="@+id/humidityTitle"
        android:textSize="22sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/minTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        android:id="@+id/pressureTitle"
        android:textSize="22sp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/humidityTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        android:id="@+id/windTitle"
        android:fontFamily="sans-serif-light"
        android:textSize="22sp"
        android:layout_below="@+id/pressureTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
